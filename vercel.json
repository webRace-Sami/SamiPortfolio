{
  "version": 2,
  "outputDirectory": "frontend/dist",
  "builds": [
    {
      "src": "frontend/src/App.tsx",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    { "src": "api/*.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "frontend/src/App.tsx" }
  ]
}
